CC := gcc
SRC := main.c school.c
OBJ := ${SRC:%.c=%.o}
NAME := school

# Build the executable
#
# USAGE:
# make | make all  # Creates 'school' executable

.PHONY = all

all: ${OBJ} m.h
	${CC} ${filter %.o,$^} -o ${NAME}

